
/*  此处是主体内容属性值设置处*/
.que{
  width: 98%;
  margin: auto;
  padding: 10px;
  background-color: lightcyan;
}
/* 此处是右边图片和文字显示 */
.isay{
  width: 100%;
  margin-top: 10px;
  display: flex;
}
/* 此处是右边属性图片设置*/
.r-i{
  width: 30px;
}
/* 此处是右边属性文字设置*/
.r-t{
  width: 90%;
}
/* 此处是右边图片显示 */
.isay image{
  border-radius: 50%;
 width: 30px;
 height: 30px;
 background: darkblue 
}
/* 此处是右边文本显示处 */
.isay text{
  position: absolute;
  right: 50px;
  margin-top: 5px;
 border-radius: 8px;
 font-size: 14px;
 color: rgba(136, 13, 194, 0.664);
 word-break:break-all;
}
 /*此处是右边头像显示  */
.top-r{
  position: fixed;
  left: 15px;
  color: #7c22d6;
  font-size: 15px
}
 /* 此处是左边图片和文字显示 */
.robort{
  width: 65%;
  margin-top: 0px;
}
/* 此处是图片 */
.l-i{
  width: 30px;
}
.robort image{
  border-radius: 50%;
  width: 30px;
  height: 30px;
}
/* 此处文字 */
.l-t{
  margin-top: 20px;
  margin-left: 35px;
}
/* --------------此处是下方输入框属性设置----------------- */
/* 此处是下部的内容 */
.send{
  width: 100%;
  height: 50px;
  padding-top: 20px; 
  background-color:#ffffff;
  text-align: center;
  box-shadow: 6px -2px 15px rgb(209, 204, 204)
}
/* 此处是输入框样式 */
.input{
  display: flex;
  width: 100%;
}
/* 此处是输入框的文字样式 */
.text{
  width: 61%;
  height: 40px;
  min-height: 30px;
  border-radius:29px;
  font-size: 12px;
  background-color: rgb(239, 243, 243);
  text-align: center;
  color: #505050
  }
  /*此处是 第一个按钮样式 */
.btn{
  height: 35px;
  width: 15%;
  background-color: rgba(17, 208, 192, 0.88);
  line-height: 35px;
  font-size: 12px;
  color: #ffffff;
  cursor: pointer;
  border-radius:18px;
  box-shadow:3px 3px 12px -1px #968f96db;
}
  /*此处是 第二个按钮样式 */
.btn-d{
  height: 35px;
  width: 15%;
  background-color: rgb(0, 0, 0);
  line-height: 35px;
  color: #fafafa;
  cursor: pointer;
  border-radius:18px;
  box-shadow:3px 3px 12px -1px #968f96db;
  font-size: 12px
}
/*此处是say的说话字体属性设置  */
.say{
  float: right;
  margin-right: 30px;
  font-size: 16px;
  font-weight: bold;
  line-height: 29px;
  color: #9f2dee;
  cursor: pointer;
  border-radius:7px;
}
 /* 此处是右边图片属性设置 */
.robort image{
 margin-bottom: -60px;
  width: 30px;
  height: 30px;
  border-radius: 7px;
}
/* 此处是左边的文字设置 */
.robort text{
  margin-left: 4px;
  border-radius: 10px;
 font-size: 14px;
 color:  rgba(226, 19, 115, 0.788);
 margin-bottom: -32px;
}
/* 此处是内容处设置 */
.con{
  margin-top: 1%;
  width: 98%;
}